@model IndexModel;

@{
    ViewData["Title"] = "Home Page";
    var products = Model.Products;
}

<div class="text-center">
    <table>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Описание</th>
            <th>Цена за штуку</th>
            <th>Количество</th>
            <th>Действие</th>
        </tr>
        @for (int i = 0; i < products.Count; i++)
        {
            <tr>
                <td>@products[i].ID</td>
                <td>@products[i].Category</td>
                <td>@products[i].Description</td>
                <td>@products[i].Price</td>
                <td>@products[i].Quantity</td>
            </tr>
        }
    </table>
    <h3>Новый продукт:</h3>
    <form action="@Url.Action("CreateProduct", "Home")" method="post">
        Category:<br/>
        <input type="text" name="Category" value=""/><br/>
        Description:<br/>
        <input type="text" name="Description" value=""/><br/>
        Price:<br/>
        <input type="number" name="Price" value=""/><br/>
        Quantity:<br/>
        <input type="number" name="Quantity" value=""/><br/>
        <input type="submit" name="Create"/><br/>
    </form>
</div>